<%# Dummy Data Arrays %>
<% destinations = [
  { title: "Paris", subtitle: "City of Lights", image: "https://placehold.co/600x400?text=Paris" },
  { title: "Tokyo", subtitle: "Vibrant Culture", image: "https://placehold.co/600x400?text=Tokyo" },
  { title: "New York", subtitle: "City That Never Sleeps", image: "https://placehold.co/600x400?text=New+York" },
  { title: "Sydney", subtitle: "Beaches & Opera House", image: "https://placehold.co/600x400?text=Sydney" },
  { title: "Rome", subtitle: "Historic Streets & Food", image: "https://placehold.co/600x400?text=Rome" },
  { title: "London", subtitle: "History & Modern Life", image: "https://placehold.co/600x400?text=London" }
] %>

<% featured_packages = [
  { title: "Paris Luxury Escape", image: "https://placehold.co/600x400?text=Package+1" },
  { title: "Tokyo Culinary Tour", image: "https://placehold.co/600x400?text=Package+2" },
  { title: "NYC Weekend Adventure", image: "https://placehold.co/600x400?text=Package+3" }
] %>

<!-- Hero Section -->
<section class="relative h-[500px] bg-cover bg-center overflow-hidden" style="background-image: url('https://placehold.co/1200x500?text=Destinations+Hero')">
  <div class="absolute inset-0 bg-black/50"></div>
  <div class="relative z-10 container-custom px-4 flex flex-col justify-center h-full text-white">
    <h1 class="text-5xl md:text-6xl font-bold mb-4">Explore Destinations</h1>
    <p class="text-lg md:text-xl max-w-xl">Find your next adventure and explore top destinations around the world.</p>
  </div>
</section>

<!-- Destinations Grid Section -->
<section class="section-spacing bg-gray-50">
  <div class="container-custom px-4">
    <div class="mb-12 text-left">
      <p class="text-gray-400 text-sm font-medium mb-2 uppercase tracking-wide">Top Destinations</p>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900">Discover Our Destinations</h2>
      <p class="text-lg text-gray-500 max-w-md mt-2">Explore a curated list of destinations with unique experiences and rich culture.</p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% destinations.each do |dest| %>
        <div class="relative rounded-3xl overflow-hidden group cursor-pointer h-80">
          <img src="<%= dest[:image] %>" alt="<%= dest[:title] %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
          <div class="absolute bottom-6 left-6 text-white">
            <p class="text-white/80 text-sm font-medium mb-1"><%= dest[:subtitle] %></p>
            <h3 class="text-2xl font-bold"><%= dest[:title] %></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Featured Packages Section -->
<section class="section-spacing">
  <div class="container-custom px-4">
    <div class="mb-12 text-left">
      <p class="text-gray-400 text-sm font-medium mb-2 uppercase tracking-wide">Highlights</p>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900">Featured Travel Packages</h2>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% featured_packages.each do |pkg| %>
        <div class="relative rounded-3xl overflow-hidden group cursor-pointer h-80">
          <img src="<%= pkg[:image] %>" alt="<%= pkg[:title] %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
          <div class="absolute bottom-6 left-6 text-white">
            <h3 class="text-2xl font-bold"><%= pkg[:title] %></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="py-32 bg-primary-600">
  <div class="container-custom px-4 text-center">
    <div class="inline-block bg-white/10 backdrop-blur-sm rounded-2xl p-12 shadow-card">
      <h2 class="heading-section text-white mb-4">Ready for Your Next Adventure?</h2>
      <p class="text-white/80 mb-8">Browse our destinations and book the perfect travel experience for you.</p>
      <a href="/packages" class="btn-secondary">Explore Packages</a>
    </div>
  </div>
</section>
