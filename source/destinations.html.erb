    { title: "Kerala", subtitle: "Backwaters & Hills", image: "https://placehold.co/600x400?text=Kerala" },
    { title: "Rajasthan", subtitle: "Palaces & Deserts", image: "https://placehold.co/600x400?text=Rajasthan" },
    { title: "Himachal Pradesh", subtitle: "Mountains & Adventure", image: "https://placehold.co/600x400?text=Himachal" },
    { title: "Tamil Nadu", subtitle: "Temples & Culture", image: "https://placehold.co/600x400?text=Tamil+Nadu" },
    { title: "Kashmir", subtitle: "Paradise on Earth", image: "https://placehold.co/600x400?text=Kashmir" }
