<a href="<%= package.url %>">
  <div class="group relative bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 package-card fade-in transform hover:-translate-y-2">
    <div class="relative h-100 overflow-hidden">
      <img src="<%= package.hero %>" alt="<%= package[:title] %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
      
      <!-- Gradient overlay -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
      
      <!-- Top badges -->
      <div class="absolute top-6 left-6 right-6 flex items-start justify-between">
        <div class="bg-white/20 backdrop-blur-sm border border-white/30 px-3 py-2 rounded-full text-white text-sm font-medium">
          <%= package[:days] %> Days
        </div>
        <div class="flex items-center bg-white/20 backdrop-blur-sm border border-white/30 px-3 py-2 rounded-full text-white text-sm font-medium">
          <svg class="w-4 h-4 text-yellow-400 mr-1 fill-current" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <%= package[:rating] || rand(4.5..4.9).round(1) %>
        </div>
      </div>
      
      <!-- Bottom content -->
      <div class="absolute bottom-6 left-6 right-6 bg-white/20 backdrop-blur-sm rounded-lg px-3 py-2">
        <div class="text-white text-sm opacity-80 mb-2">
          <%= "#{package.days}D / #{package.nights}N" %>
        </div>
        <div class="flex items-end justify-between">
          <div>
            <h3 class="text-2xl font-bold text-white mb-1">
              <%= package[:title] %>
            </h3>
          </div>
          <div class="text-right">
            <div class="text-3xl font-bold text-white">
              â‚¹<%= package[:price] %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</a>
