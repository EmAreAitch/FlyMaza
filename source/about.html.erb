<%
  # About Page Variables
  page_title = "About Fly Maza"
  page_subtitle = "Discover the story behind Delhi's exciting travel startup"
  
  # Hero Section
  hero_title = "Crafting unforgettable journeys across India"
  hero_subtitle = "Backed by Globe India Travels, we bring years of experience and passion to every adventure"
  hero_image = "about-hero.jpg"
  
  # Mission & Vision
  mission_title = "Our Mission"
  mission_content = "To design thoughtfully crafted travel packages that turn journeys into lasting memories — whether weekend escapes, family vacations, romantic getaways, or adventure-filled tours."
  
  vision_title = "Our Vision"  
  vision_content = "To be India’s most trusted travel companion, delivering personalized, seamless, and memorable travel experiences to every traveler."
  
  # Story Section
  story_title = "Our Story"
  story_subtitle = "From trusted beginnings to a new travel adventure"
  
  story_content = [
    {
      year: "2009",
      title: "Globe India Travels Founded",
      content: "Established to create seamless and memorable travel experiences for passengers across India."
    },
    {
      year: "2024",
      title: "Fly Maza Launch",
      content: "Building on years of trusted service, Fly Maza was launched as a fresh travel startup offering innovative, personalized packages for every kind of traveler."
    }
  ]
  
  # Values Section
  values_title = "Our Values"
  values = [
    {
      icon: "heart",
      title: "Memorable Experiences",
      description: "We craft journeys that leave lasting impressions, from comfort to adventure."
    },
    {
      icon: "users",
      title: "Customer-Centric Approach", 
      description: "Every trip is designed around our traveler’s preferences and needs."
    },
    {
      icon: "shield",
      title: "Trusted & Reliable",
      description: "Leveraging years of experience and partnerships to ensure safety, convenience, and quality."
    },
    {
      icon: "star",
      title: "Excellence in Service",
      description: "Dedicated to exceeding expectations at every step of your journey."
    }
  ]
  
  # Team Section (sample team members)
  team_title = "Meet Our Team"
  team_subtitle = "The passionate people behind your travel adventures"
  
  team_members = [
    {
      name: "Vijay Kapoor",
      role: "Founder & CEO", 
      image: "team-sari.jpg",
      description: "Vijay founded Fly Maza to share her love for travel and ensure every journey is seamless and memorable."
    },
    {
      name: "Mohammad Sajid",
      role: "Head of Operations",
      image: "team-ahmad.jpg", 
      description: "Sajid ensures smooth operations for every trip, making each experience stress-free and enjoyable."
    }
  ]
  
  # Stats for About page
  about_stats = [
      { number: data.site.stats.happy_travelers, label: "Happy Travelers" },
      { number: data.site.stats.years_of_experience, label: "Years of Experience" },
      { number: data.site.stats.destinations_covered, label: "Destinations Covered" },
      { number: data.site.stats.customer_rating, label: "Customer Rating" }
    ]
  
  # Why Choose Us
  why_choose_title = "Why Choose Fly Maza"
  why_choose_reasons = [
    {
      icon: "map",
      title: "Local Expertise",
      description: "Deep knowledge of India’s destinations and hidden gems ensures authentic and memorable experiences."
    },
    {
      icon: "shield-check",
      title: "Safety First", 
      description: "Strict safety standards and expert guides guarantee secure and enjoyable journeys."
    },
    {
      icon: "clock",
      title: "24/7 Support",
      description: "Round-the-clock assistance before, during, and after your trip for complete peace of mind."
    },
    {
      icon: "award",
      title: "Trusted Service",
      description: "Built on years of reliable service and multiple industry recognitions for excellence."
    }
  ]
%>

<!-- Page Header -->
<section class="py-12 pt-32 bg-gray-50">
  <div class="container-custom">
    <div class="text-center max-w-4xl mx-auto">
      <div class="fade-in">
        <h1 class="heading-section md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          <%= page_title %>
        </h1>
        <p class="text-gray-600 max-w-2xl mx-auto mb-4">
          <%= page_subtitle %>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Hero About Section -->
<section class="section-spacing-sm">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Content -->
      <div class="slide-in-left">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-8">
          <%= hero_title %>
        </h2>
        <p class="text-lg md:text-xl text-gray-600 leading-relaxed mb-8">
          <%= hero_subtitle %>
        </p>
        
        <!-- Mission & Vision Cards -->
        <div class="space-y-6">
          <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
            <h3 class="text-xl font-bold text-gray-900 mb-3 text-gradient"><%= mission_title %></h3>
            <p class="text-gray-600 leading-relaxed"><%= mission_content %></p>
          </div>
          <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
            <h3 class="text-xl font-bold text-gray-900 mb-3 text-gradient"><%= vision_title %></h3>
            <p class="text-gray-600 leading-relaxed"><%= vision_content %></p>
          </div>
        </div>
      </div>
      
      <!-- Image -->
      <div class="slide-in-right">
        <div class="relative">
          <img src="https://placehold.co/600x600/4A5A96/FFFFFF?text=FlyMaza+Team" alt="FlyMaza Team" class="w-full h-96 lg:h-[600px] object-cover rounded-2xl shadow-xl">
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-2xl"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Stats Section -->
<section class="py-16 bg-gray-50">
  <div class="container-custom">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <% about_stats.each do |stat| %>
        <div class="text-center fade-in">
          <div class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-2">
            <%= stat[:number] %>
          </div>
          <div class="text-gray-600 font-medium">
            <%= stat[:label] %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Our Story Timeline -->
<section class="section-spacing">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16 fade-in">
      <p class="text-gray-500 text-lg mb-4">Journey Through Time</p>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        <%= story_title %>
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        <%= story_subtitle %>
      </p>
    </div>
    
    <!-- Timeline -->
    <div class="max-w-4xl mx-auto">
      <div class="space-y-12">
        <% story_content.each_with_index do |milestone, index| %>
          <div class="relative fade-in">
            <!-- Timeline Line -->
            <% unless index == story_content.length - 1 %>
              <div class="absolute left-8 top-16 w-0.5 h-20 bg-gray-200"></div>
            <% end %>
            
            <div class="flex items-start space-x-8">
              <!-- Year Badge -->
              <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-lg shadow-lg">
                  <%= milestone[:year].slice(-2, 2) %>
                </div>
              </div>
              
              <!-- Content -->
              <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 flex-1">
                <div class="mb-2 text-sm font-semibold text-primary-600 uppercase tracking-wide">
                  <%= milestone[:year] %>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">
                  <%= milestone[:title] %>
                </h3>
                <p class="text-gray-600 leading-relaxed text-lg">
                  <%= milestone[:content] %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Our Values -->
<section class="section-spacing bg-gray-50">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16 fade-in">
      <p class="text-gray-500 text-lg mb-4">What Drives Us</p>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
        <%= values_title %>
      </h2>
    </div>
    
    <!-- Values Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <% values.each do |value| %>
        <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 fade-in group hover:shadow-lg transition-all duration-300">
          <div class="mb-6">
            <div class="w-16 h-16 bg-primary-100 group-hover:bg-primary-200 rounded-2xl flex items-center justify-center transition-all duration-300">
              <% case value[:icon]
                 when "heart" %>
                <svg class="w-8 h-8 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
                </svg>
              <% when "users" %>
                <svg class="w-8 h-8 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
                </svg>
              <% when "shield" %>
                <svg class="w-8 h-8 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              <% when "star" %>
                <svg class="w-8 h-8 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              <% end %>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">
            <%= value[:title] %>
          </h3>
          <p class="text-gray-600 leading-relaxed text-lg">
            <%= value[:description] %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Meet Our Team -->
<section class="section-spacing">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16 fade-in">
      <p class="text-gray-500 text-lg mb-4">Our Experts</p>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        <%= team_title %>
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        <%= team_subtitle %>
      </p>
    </div>
    
    <!-- Team Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 justify-items-center gap-8 max-w-4xl mx-auto">
  <% team_members.each_with_index do |member, index| %>
    <div class="w-full max-w-xs bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-100 fade-in group hover:shadow-lg transition-all duration-300">
      <div class="relative h-64 overflow-hidden">
        <img src="https://placehold.co/300x400/<%= ['4A5A96', 'FF6B35', '20B2AA', 'F59E0B'][index] %>/FFFFFF?text=<%= member[:name].split.map(&:first).join %>" 
             alt="<%= member[:name] %>" 
             class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
      </div>
      <div class="p-6">
        <h3 class="text-xl font-bold text-gray-900 mb-2">
          <%= member[:name] %>
        </h3>
        <p class="text-primary-600 font-semibold mb-4">
          <%= member[:role] %>
        </p>
        <p class="text-gray-600 text-sm leading-relaxed">
          <%= member[:description] %>
        </p>
      </div>
    </div>
  <% end %>
</div>
  </div>
</section>

<!-- Why Choose Us -->
<section class="section-spacing bg-gray-50">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16 fade-in">
      <p class="text-gray-500 text-lg mb-4">Your Trusted Partner</p>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
        <%= why_choose_title %>
      </h2>
    </div>
    
    <!-- Reasons Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <% why_choose_reasons.each do |reason| %>
        <div class="text-center fade-in group">
          <div class="mb-6">
            <div class="w-20 h-20 bg-white group-hover:bg-primary-50 rounded-2xl flex items-center justify-center mx-auto shadow-sm border border-gray-100 transition-all duration-300">
              <% case reason[:icon]
                 when "map" %>
                <svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                </svg>
              <% when "shield-check" %>
                <svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              <% when "clock" %>
                <svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              <% when "award" %>
                <svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              <% end %>
            </div>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">
            <%= reason[:title] %>
          </h3>
          <p class="text-gray-600 leading-relaxed">
            <%= reason[:description] %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="section-spacing bg-gradient-to-br from-primary-600 via-accent-500 to-secondary-500">
  <div class="container-custom text-center">
    <div class="max-w-4xl mx-auto fade-in">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-8">
        Ready to explore World with us?
      </h2>
      <p class="text-xl text-white/90 mb-12 max-w-2xl mx-auto">
        Join millions of travelers who have discovered Indonesia's magic through FlyMaza. Your extraordinary adventure awaits.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/destinations" class="bg-golden-500 hover:bg-golden-600 text-white font-semibold px-8 py-4 rounded-full transition-all duration-300 transform hover:scale-105">
          Explore Destinations
        </a>
        <a href="/#contact" class="border-2 border-white text-white hover:bg-secondary-600 font-semibold px-8 py-4 rounded-full transition-all duration-300">
          Book now
        </a>
      </div>
    </div>
  </div>
</section>
