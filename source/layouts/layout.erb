<%
  # Site Configuration Variables - will be moved to data.yml eventually
  site_name = "FlyMaza"
  site_tagline = "Extraordinary Natural and Cultural Charm"
  
  # Navigation items
  nav_items = [
    { name: "Home", url: "/", active: true },
    { name: "Destinations", url: "/destinations" },
    { name: "Packages", url: "/packages" },
    { name: "About", url: "/about" },
    { name: "Contact", url: "/contact" }
  ]
  
  # Contact info
  phone = "+62 XXX XXX XXXX"
  email = "info@flymaza.com"
%>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <title><%= current_page.data.title ? "#{current_page.data.title} | #{site_name}" : "#{site_name} - #{site_tagline}" %></title>
    <meta name="description" content="<%= current_page.data.description || 'Discover Indonesia\'s extraordinary natural beauty and rich cultural heritage with FlyMaza. Expert travel experiences, curated packages, and unforgettable adventures await.' %>">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <%= stylesheet_link_tag "tailwind" %>
    <%= stylesheet_link_tag "site" %>
  </head>

  <body class="antialiased bg-white text-gray-900">
    <!-- Header/Navigation -->
    <header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 pt-1">
      <nav class="container-custom">
        <div class="flex items-center justify-between h-16 lg:h-20">
          <!-- Logo -->
          <div class="flex items-center bg-white/40 backdrop-blur-sm px-6 rounded-full border border-white/20">
            <a href="/" class="flex items-center space-x-2">
              <img src=<%= responsive_image("logo-flymaza.png") %> class="h-16 w-auto">
            </a>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden lg:flex items-center space-x-8 bg-white/40 backdrop-blur-sm rounded-full px-6 py-2 border border-white/20">
            <% nav_items.each do |item| %>
              <a href="<%= item[:url] %>" 
                 class="<%= item[:active] ? 'text-black font-semibold' : 'text-black/70 hover:text-white' %> transition-colors duration-200 px-3 py-2 text-sm">
                <%= item[:name] %>
              </a>
            <% end %>
          </div>

          <!-- Right side items -->
          <div class="hidden lg:flex items-center space-x-4">
            <!-- Login Button -->
            <button class="px-6 py-2 bg-white/40 backdrop-blur-sm text-black rounded-full text-sm font-medium hover:bg-white/30 transition-all duration-200 border border-white/20">
              Login
            </button>
          </div>
            
          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="lg:hidden p-2 text-white hover:text-white/70 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="lg:hidden absolute top-full left-0 right-0 bg-white/95 backdrop-blur-lg border-b border-white/20 shadow-lg transform -translate-y-full opacity-0 transition-all duration-300">
          <div class="px-4 py-6 space-y-4">
            <% nav_items.each do |item| %>
              <a href="<%= item[:url] %>" 
                 class="block <%= item[:active] ? 'text-primary-600 font-semibold' : 'text-gray-700' %> hover:text-primary-600 transition-colors duration-200 py-2">
                <%= item[:name] %>
              </a>
            <% end %>
            <div class="pt-4 border-t border-gray-200">
              <div class="flex items-center space-x-2 mb-4">
                <button class="px-3 py-1 text-sm text-gray-600 hover:text-gray-900 transition-colors duration-200">De</button>
                <button class="px-3 py-1 text-sm bg-primary-600 text-white rounded-full">En</button>
              </div>
              <button class="w-full bg-primary-600 text-white py-3 rounded-xl font-medium hover:bg-primary-700 transition-colors duration-200">
                Login
              </button>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="bg-gray-50">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
      <div class="container-custom section-spacing-sm">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Company Info -->
          <div class="lg:col-span-2">
            <div class="flex items-center space-x-2 mb-4">
              <img src=<%= responsive_image("logo-flymaza.png") %> class="h-20 w-auto">
            </div>
            <p class="text-gray-400 mb-6 max-w-md">
              Discover Indonesia's extraordinary natural beauty and rich cultural heritage. 
              We create unforgettable travel experiences tailored to your dreams.
            </p>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-400 hover:text-accent-400 transition-colors duration-200">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
