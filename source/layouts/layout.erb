<%
  # Site Configuration Variables - will be moved to data.yml eventually
  site_name = "FlyMaza"
  site_tagline = "Extraordinary Natural and Cultural Charm"
  
  # Navigation items
  nav_items = [
    { name: "Home", url: "/" },
    { name: "Destinations", url: "/destinations/" },
    { name: "Packages", url: "/packages/" },
    { name: "Articles", url: "/articles/" },
    { name: "About", url: "/about/" },
    { name: "Contact", url: "/contact/" },
  ]  

  active = nav_items.find { it[:url] == current_page.url }
  active[:active] = true if active
  # Contact info
  phone = "+91 96505 12067"
  email = "support@flymaza.in"
%>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <title><%= current_page.data.title ? "#{current_page.data.title} | #{site_name}" : "#{site_name} - #{site_tagline}" %></title>
    <meta name="description" content="<%= current_page.data.description || 'Discover Indonesia\'s extraordinary natural beauty and rich cultural heritage with FlyMaza. Expert travel experiences, curated packages, and unforgettable adventures await.' %>">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.jpeg">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <%= stylesheet_link_tag "tailwind" %>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site", defer: true %>    
    <script src="//instant.page/5.2.0" type="module" integrity="sha384-jnZyxPjiipYXnSU0ygqeac2q7CVYMbh84q0uHVRRxEtvFPiQYbXWUorga2aqZJ0z"></script>
    <%= yield_content :head %>
  </head>

  <body class="antialiased bg-white text-gray-900">
    <header class="fixed top-0 left-0 right-0 z-50 pt-5">
      <nav class="container-custom">
        <!-- Shared background wrapper -->
        <div class="flex items-center justify-between h-16 lg:h-20 
                    bg-white/40 backdrop-blur-sm rounded-full 
                    border border-white/20 px-6">
          
          <!-- Logo -->
          <div class="flex items-center">
            <a href="/" class="flex items-center space-x-2">
              <img src=<%= responsive_image("logo-flymaza.png") %> class="h-18 w-auto">
            </a>
          </div>
    
          <!-- Desktop Navigation -->
          <div class="hidden lg:flex items-center space-x-8">
            <% nav_items.each do |item| %>
              <a href="<%= item[:url] %>" 
                 class="<%= item[:active] ? 'text-black font-semibold' : 'text-black/70 hover:text-black' %> px-3 py-2 text-sm">
                <%= item[:name] %>
              </a>
            <% end %>
          </div>
              
          <!-- Right side items -->
          <div class="hidden lg:flex items-center space-x-4">
            <a href="/#contact" class="px-6 py-2 bg-secondary-500 text-white rounded-full text-sm font-medium hover:bg-golden-400">
              Book Now
            </a>            
          </div>
          
    
          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="lg:hidden p-2 text-black">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
    
        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" 
             class="lg:hidden fixed top-0 right-0 h-full w-64 bg-white/40 backdrop-blur-sm border-l border-gray-200 shadow-lg 
                    hidden p-6 flex flex-col space-y-4 z-50">
          <% nav_items.each do |item| %>
            <a href="<%= item[:url] %>" 
               class="<%= item[:active] ? 'text-primary-600 font-semibold' : 'text-gray-700' %> hover:text-primary-600 py-2">
              <%= item[:name] %>
            </a>
          <% end %>
    
          <a href="/#contact" class="mt-auto w-full bg-secondary-500 text-white py-3 rounded-xl font-medium hover:bg-golden-400 text-center">
            Book Now
          </a>                    
        </div>
      </nav>
    </header>
    




    <!-- Main Content -->
    <main class="bg-gray-50">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
      <div class="container-custom section-spacing-sm">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Company Info -->
          <div class="lg:col-span-2">
            <div class="flex items-center space-x-2 mb-4">
              <img src=<%= responsive_image("logo-flymaza.png") %> class="h-36 w-auto mx-auto md:mx-0">
            </div>
            <p class="text-gray-400 mb-6 max-w-md">
              Discover India's extraordinary natural beauty and rich cultural heritage. 
              We create unforgettable travel experiences tailored to your dreams.
            </p>
            <div class="flex space-x-4">
              <!-- Instagram -->
              <a href="https://www.instagram.com/flymaza" target="_blank" rel="noopener" class="hover:opacity-80 transition">
                <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/instagram.svg" alt="Instagram" class="w-6 h-6 invert">
              </a>
              <!-- Facebook -->
              <a href="https://www.facebook.com/people/Fly-Maza/61580068719719" target="_blank" rel="noopener" class="hover:opacity-80 transition">
                <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/facebook.svg" alt="Facebook" class="w-6 h-6 invert">
              </a>              
            </div>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <% nav_items.each do |item| %>
                <li>
                  <a href="<%= item[:url] %>" class="text-gray-400 hover:text-accent-400 transition-colors duration-200">
                    <%= item[:name] %>
                  </a>
                </li>
              <% end %>
              <li><a href="/admin/" class="text-gray-400 hover:text-accent-400 transition-colors duration-200">Admin</a></li>
            </ul>
          </div>

          <!-- Contact Info -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Contact</h3>
            <ul class="space-y-2 text-gray-400">
              <li>
                <a href="https://wa.me/<%= phone.gsub(/[^0-9]/, '') %>" target="_blank" rel="noopener"
                   class="inline-flex items-center space-x-2 bg-green-500 hover:bg-green-600 text-white font-semibold px-4 py-3 rounded-2xl shadow-lg transition">
                  <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/whatsapp.svg" alt="WhatsApp" class="w-6 h-6 invert">
                  <span><%= phone %></span>
                </a>
                
              </li>
              <li>
                <a href="mailto:<%= email %>" class="hover:text-accent-400 transition-colors duration-200">
                  <%= email %>
                </a>
              </li>
              <li>India</li>
            </ul>
          </div>
        </div>

        <!-- Copyright -->
        <div class="border-t border-gray-800 pt-8 mt-8 text-center text-gray-400">
          <p>&copy; <%= Date.current.year %> <%= site_name %>Â®. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
