<%
  # Privacy Policy Page Variables
  page_title = "Privacy Policy"
  page_subtitle = "Your privacy is important to us. Learn how we collect, use, and protect your personal information."
  
  # Hero Section
  hero_title = "Your Privacy Matters"
  hero_subtitle = "At FlyMaza, we respect your privacy and are committed to protecting your personal information. This Privacy Policy explains how we collect, use, disclose, and safeguard your information when you visit our website www.flymaza.in, use our services, or book a travel package with us."
  
  # Privacy Policy Sections
  privacy_sections = [
    {
      number: "1",
      title: "Information We Collect",
      content: "We may collect the following information from you:",
      items: [
        "Personal Details: Name, email address, phone number, date of birth, address.",
        "Booking Information: Passport details, travel preferences, itinerary details.",
        "Payment Details: Credit/debit card or UPI information (processed securely via payment gateways).",
        "Technical Information: IP address, browser type, device information, cookies, and usage data."
      ]
    },
    {
      number: "2", 
      title: "How We Use Your Information",
      content: "We use your information to:",
      items: [
        "Process bookings and travel arrangements.",
        "Provide customer support and updates about your bookings.",
        "Improve our website and services.",
        "Send promotional offers, newsletters, and updates (only with your consent).",
        "Comply with legal and regulatory requirements."
      ]
    },
    {
      number: "3",
      title: "Sharing of Information", 
      content: "We may share your information with:",
      items: [
        "Travel partners & service providers (airlines, hotels, visa agents, etc.) to fulfill your bookings.",
        "Payment gateways to process transactions securely.",
        "Legal authorities, if required by law."
      ],
      note: "We do not sell or rent your personal information to third parties."
    },
    {
      number: "4",
      title: "Cookies & Tracking",
      content: "We use cookies and similar technologies to improve your browsing experience, analyze website traffic, and personalize offers. You may disable cookies through your browser settings, but some features may not function properly."
    },
    {
      number: "5",
      title: "Data Security",
      content: "We use industry-standard security measures to protect your personal data. However, no method of transmission over the Internet is 100% secure, and we cannot guarantee absolute security."
    },
    {
      number: "6",
      title: "Your Rights",
      content: "As a user, you have the right to:",
      items: [
        "Access, update, or correct your personal information.",
        "Opt-out of promotional communications at any time.",
        "Request deletion of your personal data (subject to legal and contractual obligations)."
      ]
    },
    {
      number: "7",
      title: "Third-Party Links",
      content: "Our website may contain links to third-party websites. We are not responsible for the privacy practices or content of such sites."
    },
    {
      number: "8",
      title: "Children's Privacy",
      content: "Our services are not directed to individuals under the age of 18. We do not knowingly collect personal information from children."
    },
    {
      number: "9",
      title: "Changes to This Policy",
      content: "We may update this Privacy Policy from time to time. Changes will be posted on this page with an updated \"Effective Date.\""
    },
    {
      number: "10",
      title: "Contact Us",
      content: "If you have any questions about this Privacy Policy or your personal data, please contact us:",
      contact_info: [
        { icon: "email", text: "operations1@flymaza.in" },
        { icon: "phone", text: "+91-9910682618" },
        { icon: "globe", text: "www.flymaza.in" }
      ]
    }
  ]
%>

<!-- Page Header -->
<section class="py-16 pt-32 bg-gray-50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto">
      <div class="fade-in">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          <%= page_title %>
        </h1>
        <p class="text-lg text-gray-600">
          <%= page_subtitle %>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Privacy Policy Content -->
<section class="py-16">
  <div class="container-custom">
    <div class="max-w-3xl mx-auto">
      <!-- Introduction -->
      <div class="bg-white rounded-xl p-6 mb-8 shadow-sm border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">
          <%= hero_title %>
        </h2>
        <p class="text-gray-600 leading-relaxed">
          <%= hero_subtitle %>
        </p>
      </div>

      <!-- Privacy Policy Sections -->
      <div class="space-y-6">
        <% privacy_sections.each do |section| %>
          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
            <div class="flex items-start space-x-4">
              <!-- Section Number -->
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                  <%= section[:number] %>
                </div>
              </div>
              
              <!-- Content -->
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 mb-3">
                  <%= section[:title] %>
                </h3>
                <p class="text-gray-600 leading-relaxed mb-3">
                  <%= section[:content] %>
                </p>
                
                <!-- Items List -->
                <% if section[:items] %>
                  <ul class="space-y-2 mb-3">
                    <% section[:items].each do |item| %>
                      <li class="flex items-start space-x-2">
                        <div class="flex-shrink-0 w-1.5 h-1.5 bg-primary-600 rounded-full mt-2"></div>
                        <span class="text-gray-600 text-sm leading-relaxed"><%= item %></span>
                      </li>
                    <% end %>
                  </ul>
                <% end %>
                
                <!-- Note -->
                <% if section[:note] %>
                  <div class="bg-blue-50 border-l-3 border-blue-400 p-3 rounded-r-md">
                    <p class="text-blue-800 text-sm font-medium">
                      <%= section[:note] %>
                    </p>
                  </div>
                <% end %>
                
                <!-- Contact Info -->
                <% if section[:contact_info] %>
                  <div class="space-y-2">
                    <% section[:contact_info].each do |contact| %>
                      <div class="flex items-center space-x-2">
                        <div class="w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center">
                          <% case contact[:icon]
                             when "email" %>
                            <svg class="w-3 h-3 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                          <% when "phone" %>
                            <svg class="w-3 h-3 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                          <% when "globe" %>
                            <svg class="w-3 h-3 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"/>
                            </svg>
                          <% end %>
                        </div>
                        <span class="text-gray-700 text-sm font-medium"><%= contact[:text] %></span>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Effective Date & CTA -->
<section class="py-16 bg-gray-50">
  <div class="container-custom">
    <div class="max-w-3xl mx-auto">
      <!-- Effective Date -->
      <div class="bg-white rounded-xl p-6 mb-8 shadow-sm border border-gray-100 text-center">
        <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Effective Date</h3>
        <p class="text-gray-600 text-sm">This Privacy Policy is effective as of <%= Date.current.strftime("%B %d, %Y") %> and was last updated on <%= Date.current.strftime("%B %d, %Y") %>.</p>
      </div>
    </div>
  </div>
</section>

