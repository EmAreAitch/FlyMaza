<% content_for :head do %>
  <%= javascript_include_tag :articles_filter %>
<% end %>

<!-- ðŸ” Search Input -->
<div class="mb-4 relative">
  <input 
    id="search-input" 
    type="text" 
    placeholder="Search articles..." 
    class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm
           focus:outline-none focus:ring-2 focus:ring-primary-400 focus:border-primary-500
           text-gray-800 placeholder-gray-400"
  />
  <!-- ðŸ”Ž Search Results Dropdown -->
  <div 
    id="search-results" 
    class="hidden absolute left-0 right-0 bg-white border border-gray-200 rounded-lg
           shadow-lg mt-1 z-50 max-h-60 overflow-y-auto text-gray-700"
  ></div>
</div>

<!-- ðŸ”˜ Toggle Button -->
<button 
  id="toggle-tags-btn" 
  class="bg-primary-500 text-white px-4 py-2 rounded-full text-sm font-semibold mb-4 
         hover:bg-primary-600 focus:ring-2 focus:ring-primary-300 transition-colors"
>
  Browse by Tags
</button>

<!-- ðŸ·ï¸ Tags Section -->
<div id="tags-section" 
     class="hidden max-h-48 overflow-y-auto border border-gray-200 
            rounded-lg p-4 shadow-inner bg-gray-50">
  <div class="flex flex-wrap gap-2">
    <% collection(:sorted_tags).each do |tag, articles| %>
      <a 
        href="<%= tag_path(tag) %>" 
        class="bg-accent-500 text-white px-3 py-1 rounded-full text-sm 
               hover:bg-accent-600 transition-colors"
      >
        <%= tag %>
      </a>
    <% end %>
  </div>
</div>
