<!-- Hero Section -->
<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img src="https://images.pexels.com/photos/1525041/pexels-photo-1525041.jpeg" alt="Indonesian Landscape" class="w-full h-full object-cover">
    <div class="absolute inset-0 gradient-overlay"></div>
  </div>
  
  <!-- Hero Content -->
  <div class="relative z-10 container-custom text-center text-white">
    <div class="max-w-4xl mx-auto fade-in">
      <h1 class="heading-hero mb-6 font-bold">
        <%= hero_title %>
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-gray-200 max-w-3xl mx-auto">
        <%= hero_subtitle %>
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
        <button class="btn-primary text-lg px-8 py-4">
          <svg class="w-5 h-5 mr-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          <%= hero_cta_primary %>
        </button>
        <button class="btn-outline text-lg px-8 py-4 border-white text-white hover:bg-white hover:text-primary-600">
          <svg class="w-5 h-5 mr-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <%= hero_cta_secondary %>
        </button>
      </div>
      
      <!-- Search Bar -->
      <div class="max-w-md mx-auto">
        <div class="relative">
          <input type="text" 
                 placeholder="<%= hero_search_placeholder %>"
                 class="w-full px-6 py-4 text-gray-900 rounded-full bg-white/95 backdrop-blur-sm border-0 focus:ring-2 focus:ring-accent-400 focus:outline-none text-lg">
          <button class="absolute right-2 top-2 bg-primary-600 hover:bg-primary-700 text-white p-2 rounded-full transition-colors duration-200">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Stats Bar -->
  <div class="absolute bottom-0 left-0 right-0 bg-white/95 backdrop-blur-md">
    <div class="container-custom py-6">
      <div class="grid grid-cols-4 gap-4 text-center">
        <% stats.each_with_index do |stat, index| %>
          <div class="fade-in">
            <div class="text-2xl md:text-3xl font-bold text-primary-600 stat-number" data-target="<%= stat[:number].gsub(/[^\d]/, '') %>" data-suffix="<%= stat[:number].gsub(/[\d]/, '') %>">
              0<%= stat[:label] %>
            </div>
            <div class="text-sm text-gray-600 mt-1">
              <%= case index
                  when 0 then "Happy Travelers"
                  when 1 then "Years Experience"
                  when 2 then "Destinations" 
                  when 3 then "Rating"
                  end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Indonesian Tourism Section -->
<section class="section-spacing bg-gray-50">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16 fade-in">
      <h2 class="heading-section text-gray-900 mb-4">
        <%= tourism_title %>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        <%= tourism_subtitle %>
      </p>
    </div>
    
    <!-- Tourism Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Large Featured Card -->
      <div class="lg:row-span-2 fade-in">
        <div class="relative h-96 lg:h-full rounded-xl overflow-hidden group cursor-pointer destination-card">
          <img src="https://placehold.co/600x800/20B2AA/FFFFFF?text=<%= tourism_cards[2][:title] %>" alt="<%= tourism_cards[2][:description] %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
          <div class="image-overlay"></div>
          <div class="absolute bottom-6 left-6 text-white">
            <h3 class="heading-card mb-2"><%= tourism_cards[2][:title] %></h3>
            <p class="text-accent-300 font-medium"><%= tourism_cards[2][:subtitle] %></p>
          </div>
        </div>
      </div>
      
      <!-- Regular Cards -->
      <% [0, 1, 3].each_with_index do |card_index, i| %>
        <div class="slide-in-right">
          <div class="relative h-64 rounded-xl overflow-hidden group cursor-pointer destination-card">
            <img src="https://placehold.co/400x300/<%= ['FF6B35', '4A5A96', 'F59E0B'][i] %>/FFFFFF?text=<%= tourism_cards[card_index][:title].gsub(' ', '+') %>" alt="<%= tourism_cards[card_index][:description] %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
            <div class="image-overlay"></div>
            <div class="absolute bottom-4 left-4 text-white">
              <h3 class="text-lg font-semibold mb-1"><%= tourism_cards[card_index][:title] %></h3>
              <p class="text-accent-300 text-sm"><%= tourism_cards[card_index][:subtitle] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Process Section - One Click For You -->
<section class="section-spacing bg-white">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Process Image -->
      <div class="slide-in-left">
        <div class="relative">
          <img src="https://placehold.co/600x600/20B2AA/FFFFFF?text=Travel+Process" alt="Travel Process" class="w-full h-96 lg:h-[600px] object-cover rounded-2xl">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-600/20 to-transparent rounded-2xl"></div>
        </div>
      </div>
      
      <!-- Process Steps -->
      <div class="slide-in-right">
        <h2 class="heading-section text-gray-900 mb-12">
          <%= process_title %>
        </h2>
        
        <div class="space-y-8">
          <% process_steps.each_with_index do |step, index| %>
            <div class="flex items-start space-x-4 fade-in">
              <div class="flex-shrink-0 w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center">
                <% case step[:icon]
                   when "search" %>
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                <% when "calendar" %>
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                <% when "credit-card" %>
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                  </svg>
                <% when "map" %>
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                  </svg>
                <% end %>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= step[:title] %></h3>
                <p class="text-gray-600"><%= step[:description] %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

