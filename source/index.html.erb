              <div class="relative h-80 rounded-3xl overflow-hidden group cursor-pointer">
                <img src="<%= card1[:image] %>" alt="<%= card1[:title] %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
                <div class="absolute bottom-6 left-6 text-white">
                  <p class="text-white/80 text-sm font-medium mb-1"><%= card1[:subtitle] %></p>
                  <h3 class="text-2xl font-bold"><%= card1[:title] %></h3>
                </div>
              </div>
            </div>
            <% if card2 %>
              <div class="col-span-6 fade-in">
                <div class="relative h-80 rounded-3xl overflow-hidden group cursor-pointer">
                  <img src="<%= card2[:image] %>" alt="<%= card2[:title] %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
