<section class="section-spacing bg-white">
  <div class="container-custom">
    <div class="text-center mb-16 fade-in">
      <p class="text-gray-500 text-lg mb-4">Get in touch</p>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Plan your next adventure</h2>
    </div>

    <div class="max-w-3xl mx-auto">
      <form class="bg-gray-50 rounded-3xl p-8 md:p-12" name="enquiry" netlify>
        
        <!-- Travel Type as Radio Buttons -->
        <div class="mb-6">
          <label class="block text-lg font-semibold text-gray-900 mb-2">Travel Type</label>
          <div class="flex gap-6">
            <label class="flex items-center gap-2">
              <input type="radio" name="travelType" value="domestic" class="travel-radio">
              Domestic
            </label>
            <label class="flex items-center gap-2">
              <input type="radio" name="travelType" value="international" class="travel-radio">
              International
            </label>
          </div>
        </div>

        <!-- Destination -->
        <div class="mb-6">
          <label for="destination" class="block text-lg font-semibold text-gray-900 mb-2">Destination</label>
          <div class="px-6 py-4 bg-white border-2 border-gray-200 rounded-xl">
            <select id="destination" class="w-full  focus:border-gray-900 focus:outline-none">
              <option value="">Choose your destination</option>
            </select>
          </div>
        </div>

        <!-- Package -->
        <div class="mb-6">
          <label for="package" class="block text-lg font-semibold text-gray-900 mb-2">Package</label>
          <div class="px-6 py-4 bg-white border-2 border-gray-200 rounded-xl">
            <select id="package" class="w-full focus:border-gray-900 focus:outline-none">
              <option value="">Choose a package</option>
            </select>
          </div>
        </div>

        <!-- Package Details -->
        <div id="packageDetails" class="mb-8">
          <div class="bg-white rounded-2xl p-6 border-2 border-gray-200">
            <div id="detailsContent">
              <p class="text-gray-500 text-center">Select a package to see details</p>
            </div>
          </div>
        </div>

        <!-- Personal Details -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            <label for="fullName" class="block text-gray-900 font-semibold mb-2">Full Name</label>
            <input type="text" id="fullName" placeholder="e.g. John Doe" class="w-full px-6 py-4 bg-white border-2 border-gray-200 rounded-xl focus:border-gray-900 focus:outline-none" required>
          </div>
          <div>
            <label for="email" class="block text-gray-900 font-semibold mb-2">Email</label>
            <input type="email" id="email" placeholder="e.g. john@example.com" class="w-full px-6 py-4 bg-white border-2 border-gray-200 rounded-xl focus:border-gray-900 focus:outline-none" required>
          </div>
          <div>
            <label for="phone" class="block text-gray-900 font-semibold mb-2">Phone Number</label>
            <input type="tel" id="phone" placeholder="e.g. 9876543210" class="w-full px-6 py-4 bg-white border-2 border-gray-200 rounded-xl focus:border-gray-900 focus:outline-none" required>
          </div>
          <div>
            <label for="travelDate" class="block text-gray-900 font-semibold mb-2">Travel Date</label>
            <input type="date" id="travelDate" placeholder="Pick a future date" class="w-full px-6 py-4 bg-white border-2 border-gray-200 rounded-xl focus:border-gray-900 focus:outline-none" required>
          </div>
        </div>

        <!-- Guests Count -->
        <div class="grid grid-cols-3 gap-4 mb-6">
          <div>
            <label for="adults" class="block text-gray-900 font-semibold mb-2">Adults</label>
            <input type="number" id="adults" placeholder="1 or more" min="1" class="w-full px-6 py-4 bg-white border-2 border-gray-200 rounded-xl focus:border-gray-900 focus:outline-none" required>
          </div>
          <div>
            <label for="infants" class="block text-gray-900 font-semibold mb-2">Infants</label>
            <input type="number" id="infants" placeholder="0 if none" min="0" class="w-full px-6 py-4 bg-white border-2 border-gray-200 rounded-xl focus:border-gray-900 focus:outline-none">
          </div>
          <div>
            <label for="children" class="block text-gray-900 font-semibold mb-2">Children</label>
            <input type="number" id="children" placeholder="0 if none" min="0" class="w-full px-6 py-4 bg-white border-2 border-gray-200 rounded-xl focus:border-gray-900 focus:outline-none">
          </div>
        </div>

        <!-- Additional Details -->
        <div class="mb-8">
          <label for="additionalDetails" class="block text-lg font-semibold text-gray-900 mb-2">Additional Details</label>
